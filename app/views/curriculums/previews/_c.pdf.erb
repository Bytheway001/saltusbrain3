<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" crossorigin="anonymous">

<style type="text/css">
	/* inicio estilos modelo C */

.index-c {
	border: 2px solid #000;
	font-family: "Times New Roman, Sans-serif";
	letter-spacing: 3px;
	padding: 20px;
}

.name-c {
	font-size: 45px;
	text-align: center;
}

.redes-c {
	text-align: center;
}

.redes-c p{
	display: inline-block;
	text-transform: uppercase;
	margin: 5px 10px;
}

.redes-c p .fa {
	font-size: 20px;
}

.title-datos-c {
	text-align: center;
}

.title-datos-c p {
	display: inline-block;
	margin: 5px;
	font-size: 15px;
	text-transform: uppercase;
	letter-spacing: 3px;
}

.title-seccion {
	border-bottom: 3px solid #000;
}

.title-seccion h1 {
	margin-left: 40px;
	font-size: 30px;
	letter-spacing: 5px;
	font-weight: bold;
}

.cvdatos-c {
	margin: 10px 0 0 10px;
}

.datos-c {
	margin: 5px 0;
}

.title-c {
	font-size: 20px;
	font-weight: bold;
}

/* Fin estilos modelo C */

</style>

<div class="container-fluid index-c">
	<div class="col-xs-12">
		<h1 class="name-c"><%= @persona.nombre_completo %></h1>
		<div class="col-xs-12 title-datos-c">
			<p><%= fa_icon 'envelope' %> <%= @persona.email %></p>
			<p><%= fa_icon 'calendar' %> <%= @persona.fecha_nac.to_date.strftime('%d/%m/%Y') %></p>
		</div>
		<div class="col-xs-12 title-datos-c">
			<p><%= fa_icon 'graduation-cap' %> <%= @persona.profesion %></p>
			<p><%= fa_icon 'gavel' %> <%= @persona.edo_civil_string %></p>
			<p><%= fa_icon 'male' %>/<%= fa_icon 'female' %> <%= @persona.sexo_string %></p>
		</div>
		<div class="col-xs-12 title-datos-c">
	        <p><%= fa_icon 'phone' %> <%=@persona.telefono_fijo %></p>
	       	<p><%= fa_icon 'mobile' %> <%=@persona.telefono_celular %></p>
        </div>
        <div class="col-xs-12 redes-c">
        	<% if @persona.facebook and @persona.facebook !='' %>
                <p><%= fa_icon 'facebook-square icon' %> <%=@persona.facebook %></p>
            <% end %>
            <% if @persona.facebook and @persona.twitter !='' %>
                <p><%= fa_icon 'twitter-square' %> <%=@persona.twitter %></p>
            <% end %>
            <% if @persona.facebook and @persona.linkedin != ''%>
                <p><%= fa_icon 'linkedin-square' %> <%=@persona.linkedin %></p>
            <% end %>
            <% if @persona.facebook and @persona.github !='' %>
                <p><%= fa_icon 'github-square' %> <%=@persona.github %></p>
            <% end %>
        </div>
	</div>
	<div class="col-xs-12 cv-seccion-c">
		<div class="col-xs-12 title-seccion">
			<h1>EXPERIENCIA</h1>
		</div>
		<div class="col-xs-12 cvdatos-c">
		<% @persona.cargos.each do |cargo| %>
			<div class="col-xs-12 datos-c">
				<div class="col-xs-4 time-c">
					<p><%= cargo.inicio.to_date.strftime('%d/%m/%Y') %> - <%= !cargo.current ? cargo.fin.to_date.strftime('%d/%m/%Y') : "Al presente" %></p>
				</div>
				<div class="col-xs-8">
					<p class="title-c"><%=cargo.empresa.nombre %></p>
            		<p class="cargo-c"><%= cargo.nombre %></p>
				</div>
			</div>
		<% end %>
		</div>
	</div>
	<div class="col-xs-12 cv-seccion-c">
		<div class="col-xs-12 title-seccion">
			<h1>ESTUDIOS</h1>
		</div>
		<div class="col-xs-12 cvdatos-c">
		<% @persona.studies.each do |study| %>
			<div class="col-xs-12 datos-c">
				<div class="col-xs-4 time-c">
					<p><%= study.inicio.to_date.strftime('%d/%m/%Y') %> - <%= study.fin.to_date.strftime('%d/%m/%Y') %></p>
				</div>
				<div class="col-xs-8">
					<p class="title-c"><%= study.titulo %></p>
            		<p class="cargo-c"><%=study.school.nombre %></p>
				</div>
			</div>
		<% end %>
		</div>
	</div>
	<div class="col-xs-12 cv-seccion-c">
		<div class="col-xs-12 title-seccion">
			<h1>CURSOS</h1>
		</div>
		<div class="col-xs-12 cvdatos-c">
		<% @persona.courses.each do |course| %>
			<div class="col-xs-12 datos-c">
				<div class="col-xs-4 time-c">
					<p><%= course.inicio.to_date.strftime('%d/%m/%Y') %> - <%= course.fin.to_date.strftime('%d/%m/%Y') %></p>
				</div>
				<div class="col-xs-8">
					<p class="title-c"><%= course.nombre %></p>
	            	<p class="cargo-c"><%=course.academy.nombre %></p>
				</div>
			</div>
		<% end %>
		</div>
	</div>
</div>