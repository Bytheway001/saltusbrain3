<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" crossorigin="anonymous">

<style type="text/css">

/* Inicio estilos modelo c */

.cvdatos-d, .cvinfo-d {
	height: 100%;
	padding: 0;
	font-family: "Roboto Slab, Serif";
}

.cvinfo-d {
	background: rgba(32,124,202,1);
	text-align: center;
	color: #fff;
	letter-spacing: 3px;
}

.info-d {
	padding: 0;
	text-align: center;
}

.info-d-sec {
	padding-top: 20px;
}

.info-d-sec p {
	margin: 0 auto;
}

.title-d {
	height: 200px;
	padding: 20px 0;
}

.datosp-d {
	height: auto;
	font-size: 20px;
	padding-left: 0;
	padding-right: 0;
}

.datosp-d div {
	margin-top: 5px;
}

.icon-d {
	font-size: 35px;
}

.redesp-d {
	height: auto;
	padding: 5px 25px;
	padding-right: 0;
	padding-left: 0;
}

.redesp-d .fa {
	font-size: 40px;
}

.redesp-d p {
	display: inline-block;
	text-transform: uppercase;
	margin: 10px;
	font-size: 20px;
}


.datosp-d h2, .redesp-d h2 {
	border-bottom: 3px solid #fff;
}

.titlesec-d {
	border-bottom: 5px solid rgba(32,124,202,1);
	text-align: center;
	color: rgba(32,124,202,1);
}

.titlesec-d h1 {
	margin: 5px 0;
}

.cvseccion {
	padding: 10px 0;
	margin-top: 10px;
}

.seccion-d {
	padding-top: 15px;
}


.cvtitle-d {
	font-size: 20px;
	color: rgba(32,124,202,1);
	font-weight: bold;
	margin-bottom: 0;
}

.cargo-d{
	margin-top: 0;
	font-size: 18px;
}

/* Fin estilos modelo d */

</style>


<div class="container-fluid">
	<div class="col-xs-4 cvinfo-d">
		<div class="col-xs-12 title-d">
			<h1><%= @persona.nombre_completo %></h1>
		</div>
		<div class="col-xs-12 info-d">
			<div class="col-xs-12 datosp-d">
				<h2>Datos Personales</h2>
				<div class="col-xs-12 info-d-sec">
					<p>Email</p>
					<p><%= @persona.email %></p>
				</div>
				<div class="col-xs-12 info-d-sec">
					<p>Fecha de nacimiento</p>
					<p><%= @persona.fecha_nac.to_date.strftime('%d/%m/%Y') %></p>
				</div>
				<div class="col-xs-12 info-d-sec">
					<p>Profesion</p>
					<p><%= @persona.profesion %></p>
				</div>
				<div class="col-xs-12 info-d-sec">
					<p>Edo. Civil</p>
					<p><%= @persona.edo_civil_string %></p>
				</div>
				<div class="col-xs-12 info-d-sec">
					<p>Sexo</p>
					<p><%= @persona.sexo_string %></p>
				</div>
			</div>
			<div class="col-xs-12 redesp-d">
				<h2>Contacto</h2>
				<% if @persona.facebook and @persona.facebook !='' %>
	                <p><%= fa_icon 'facebook-square icon' %> <%=@persona.facebook %></p>
	            <% end %>
	            <% if @persona.facebook and @persona.twitter !='' %>
	                <p><%= fa_icon 'twitter-square' %> <%=@persona.twitter %></p>
	            <% end %>
	            <% if @persona.facebook and @persona.linkedin != ''%>
	                <p><%= fa_icon 'linkedin-square' %> <%=@persona.linkedin %></p>
	            <% end %>
	            <% if @persona.facebook and @persona.github !='' %>
	                <p><%= fa_icon 'github-square' %> <%=@persona.github %></p>
	            <% end %>
				<p><%=fa_icon 'phone' %> <%=@persona.telefono_fijo %></p>
			    <p><%=fa_icon 'mobile' %> <%=@persona.telefono_celular %></p>
			</div>
		</div>
	</div>
	<div class="col-xs-8 cvdatos-d">
		<div class="col-xs-12 cvseccion">
			<div class="col-xs-12 titlesec-d">
				<h1 class="glyphicon glyphicon-briefcase"></h1>
				<h1>Expriencia</h1>
			</div>
			<div class="col-xs-12 seccion-d">
			<% @persona.cargos.each do |cargo| %>
				<div class="col-xs-12">
					<div class="col-xs-4">
						<p class="time-d"><%= cargo.inicio.to_date.strftime('%d/%m/%Y') %> <%= !cargo.current ? cargo.fin.to_date.strftime('%d/%m/%Y') : "Al presente" %></p>
					</div>
					<div class="col-xs-8">
						<p class="cvtitle-d"><%=cargo.empresa.nombre %></p>
            			<p class="cargo-d"><%= cargo.nombre %></p>
					</div>
				</div>
			<% end %>
			</div>
		</div>
		<div class="col-xs-12 cvseccion">
			<div class="col-xs-12 titlesec-d">
				<h1 class="glyphicon glyphicon-education"></h1>
				<h1>Estudios</h1>
			</div>
			<div class="col-xs-12 seccion-d">
			<% @persona.studies.each do |study| %>
				<div class="col-xs-12">
					<div class="col-xs-4">
						<p class="time-d"><%= study.inicio.to_date.strftime('%d/%m/%Y') %> <%= study.fin.to_date.strftime('%d/%m/%Y') %></p>
					</div>
					<div class="col-xs-8">
						<p class="cvtitle-d"><%= study.titulo %></p>
            			<p class="cargo-d"><%=study.school.nombre %></p>
					</div>
				</div>
			<% end %>
			</div>
		</div>
		<div class="col-xs-12 cvseccion">
			<div class="col-xs-12 titlesec-d">
				<h1 class="glyphicon glyphicon-tasks"></h1>
				<h1>Cursos</h1>
			</div>
			<div class="col-xs-12 seccion-d">
			<% @persona.courses.each do |course| %>
				<div class="col-xs-12">
					<div class="col-xs-4">
						<p class="time-d"><%= course.inicio.to_date.strftime('%d/%m/%Y') %> <%= course.fin.to_date.strftime('%d/%m/%Y') %></p>
					</div>
					<div class="col-xs-8">
						<p class="cvtitle-d"><%= course.nombre %></p>
		            	<p class="cargo-d"><%=course.academy.nombre %></p>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	</div>

</div>