<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" crossorigin="anonymous">

<style>
/* Inicio Modelo A */

.datos {
  padding: 10px;
  height: auto;
  border-left: 3px solid rgba(32,124,202,1);
  border-top: 3px solid rgba(32,124,202,1);
  border-right: 3px solid rgba(32,124,202,1);
}

.icon-dato {
  text-align: center;
}

.icon {
  color: rgba(32,124,202,1);
  font-size: 30px;
}

.icon-dato .fa {
  font-size: 20px;
  color: rgba(32,124,202,1);
}

.icon-dato p {
  margin-top: 5px;
  font-size: 15px;
}

.cvredes {
  text-align: center;
  margin-top: 20px;
}

.cvredes p {
  margin-top: 10px;
  font-size: 20px;
  display: inline-block;
  margin: 0 30px;
}

.cvredes .fa {
  color: rgba(32,124,202,1);
  font-size: 25px;
}

.cv-name {
  text-align: center; 
}

.cv-name{
  background: rgba(32,124,202,1);
  text-align: center;
  font-size: 35px;
  font-weight: bold;
  position: relative;
  text-transform: uppercase;
  margin: 0 -50px 20px -50px;
  color: #fff;
  padding: 20px;
  -moz-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  -webkit-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  box-shadow: 0 2px 0 rgba(32,124,202,0.7);
}

.cv-name:before, .cv-name:after    {
  content: '';
  position: absolute;
  border-style: solid;
  border-color: transparent;
  bottom: -10px;
}

.cv-name:before {
  border-width: 0 25px 9px 0;
  border-right-color: #222;
  left: 0;
}

.cv-name:after {
  border-width: 0 0 9px 25px;
  border-left-color: #222;
  right: 0;
}

.seccion {
  padding-top: 30px;
  border-left: 3px solid rgba(32,124,202,1);
  border-right: 3px solid rgba(32,124,202,1);
}

.cv-seccion {
  padding: 20px 0;
}

.title {
  padding: 0 auto;
  letter-spacing: 5px;
}

.title-left {
  background: rgba(32,124,202,1);
  text-align: center;
  font-size: 35px;
  font-weight: bold;
  position: relative;
  text-transform: uppercase;
  margin: 0 -50px 20px -50px;
  color: #fff;
  padding: 10px;
  width: 100%;
  border-radius: 0 20px 20px 0;
  -moz-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  -webkit-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  box-shadow: 0 2px 0 rgba(32,124,202,0.7);
}

.title-left:before, .title-left:after    {
  content: '';
  position: absolute;
  border-style: solid;
  border-color: transparent;
  bottom: -10px;
}

.title-left:before {
  border-width: 0 20px 9px 0;
  border-right-color: #222;
  left: 0;
}

.title-rigth {
  background: rgba(32,124,202,1);
  text-align: center;
  font-size: 35px;
  font-weight: bold;
  position: relative;
  text-transform: uppercase;
  margin: 0 50px 20px 50px;
  color: #fff;
  padding: 10px;
  width: 100%;
  border-radius: 20px 0 0 20px;
  -moz-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  -webkit-box-shadow: 0 2px 0 rgba(32,124,202,0.7);
  box-shadow: 0 2px 0 rgba(32,124,202,0.7);
}

.title-rigth:before, .title-rigth:after    {
  content: '';
  position: absolute;
  border-style: solid;
  border-color: transparent;
  bottom: -10px;
}

.title-rigth:after {
  border-width: 0 0 9px 20px;
  border-left-color: #222;
  right: 0;
}

.cvdatos-a {
  margin: 20px 0;
  text-align: center;
}

.title-a-r {
  font-size: 15px;
  text-transform: uppercase;
  font-weight: bold;
  letter-spacing: 2px;
}

.cargo-a-r {
  font-size: 15px;
  margin-bottom: 2px;
}

.fecha-a-r {
  margin-top: 0;
  font-size: 15px;
}

.title-a {
  font-size: 15px;
  text-transform: uppercase;
  margin-bottom: 0;
  font-weight: bold;
  letter-spacing: 2px;
}

.cargo-a {
  font-size: 15px;
  margin-bottom: 2px;
}

.fecha-a {
  margin-top: 0;
  font-size: 15px;
}

#last {
  border-bottom: 3px solid rgba(32,124,202,1);
  text-align: center;
}

/* Fin estilos Modelo A */

</style>

<% @persona = persona %>
<!-- Encabezado -->
  <div class="container-fluid index-b">
    <div class="datos col-xs-12">
      <div class="col-xs-12">
        <h1 class="cv-name"><%= @persona.nombre_completo %></h1>
      </div>
      <div class="col-xs-12 cv-datos">
        <div class="col-xs-12 cvdatos">
          <div class="icon-dato col-xs-4">
            <span class="glyphicon glyphicon-heart icon" aria-hidden="true"></span> 
            <p><%= @persona.edo_civil_string %> </p>
          </div>
          <div class="icon-dato col-xs-4">
            <span class="glyphicon glyphicon-envelope icon" aria-hidden="true"></span> 
            <p><%= @persona.email %></p>
          </div>
          <div class="icon-dato col-xs-4">
            <span class="glyphicon glyphicon-calendar icon" aria-hidden="true"></span> 
            <p><%= @persona.fecha_nac.to_date.strftime('%d/%m/%Y') %></p>
          </div>
          <div class="icon-dato col-xs-4">
            <span class="glyphicon glyphicon-user icon" aria-hidden="true"></span> 
            <p><%= @persona.sexo_string %></p>
          </div>
          <div class="icon-dato col-xs-4">
            <span class="glyphicon glyphicon-education icon" aria-hidden="true"></span> 
            <p><%= @persona.profesion %></p>
          </div>
          <div class="icon-dato col-xs-4">
            <% if @persona.telefono_fijo and @persona.telefono_fijo !='' %>
              <p><%= fa_icon 'phone' %> <%=@persona.telefono_fijo %></p>
            <% end %>
            <% if @persona.telefono_celular and @persona.telefono_celular !='' %>
              <p><%= fa_icon 'mobile' %> <%=@persona.telefono_celular %></p>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 cvredes">
          <% if @persona.facebook and @persona.facebook !='' %>
                    <p><%= fa_icon 'facebook-square' %> <%=@persona.facebook %></p>
                <% end %>
                <% if @persona.facebook and @persona.twitter !='' %>
                    <p><%= fa_icon 'twitter-square' %> <%=@persona.twitter %></p>
                <% end %>
                <% if @persona.facebook and @persona.linkedin != ''%>
                    <p><%= fa_icon 'linkedin-square' %> <%=@persona.linkedin %></p>
                <% end %>
                <% if @persona.facebook and @persona.github !='' %>
                    <p><%= fa_icon 'github-square' %> <%=@persona.github %></p>
                <% end %>
        </div>
      </div>
    </div>

    <!-- Empresa-->
    <div class="seccion col-xs-12">
      <div class="col-xs-12">
        <h1 class="title-left">EXPERIENCIA</h1>
      </div>
      <div class="cv-seccion">
      <% @persona.cargos.each do |cargo| %>
        <div class="col-xs-4 cvdatos-a">
          <div class="col-xs-12">
            <p class="title-a"><%=cargo.empresa.nombre %></p>
            <p class="cargo-a"><%= cargo.nombre %></p>
            <p class="fecha-a"><%= cargo.inicio.to_date.strftime('%d/%m/%Y') %> - <%= !cargo.current ? cargo.fin.to_date.strftime('%d/%m/%Y') : "Al presente" %></p>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <!-- Estudios -->
    <div class="seccion col-xs-12">
      <div class="col-xs-12">
        <h1 class="title-rigth">ESTUDIOS</h1>
      </div>
      <div class="cv-seccion">
      <% @persona.studies.each do |study| %>
        <div class="col-xs-4 cvdatos-a">
          <div class="col-xs-12">
            <p class="title-a-r"><%= study.titulo %></p>
            <p class="cargo-a-r"><%=study.school.nombre %></p>
            <p class="fecha-a-r"><%= study.inicio.to_date.strftime('%d/%m/%Y') %> - <%= study.fin.to_date.strftime('%d/%m/%Y') %></p>
          </div>
        </div>
      <% end %>
      </div>
    </div>

    <!-- Cursos -->
    <div class="seccion col-xs-12" id="last">
      <div class="col-xs-12">
        <h1 class="title-left">CURSOS</h1>
      </div>
      <div class="cv-seccion col-xs-12">
      <% @persona.courses.each do |course| %>
        <div class="col-xs-4 cvdatos-a">
          <div class="col-xs-12">
            <p class="title-a"><%= course.nombre %></p>
            <p class="cargo-a"><%=course.academy.nombre %></p>
            <p class="fecha-a"><%= course.inicio.to_date.strftime('%d/%m/%Y') %> - <%= course.fin.to_date.strftime('%d/%m/%Y') %></p>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>